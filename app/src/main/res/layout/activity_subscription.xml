<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_grey"
    tools:context=".SettingPackage.SubscriptionActivity">

    <TextView
        android:id="@+id/currentPlan"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Your current plan: Standard"
        android:textSize="20sp"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="7dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="match_parent"
                android:text=" Standard plan"
                android:textSize="25sp"
                android:textStyle="bold"
                android:background="@color/gray"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:text="Free"
                android:textSize="20sp"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:text="Access to most of the manga. \n With ads. \n There are some series that are not available and require coin to unlock. \n Does not get free coins daily."
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="7dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="match_parent"
                android:text=" VIP plan"
                android:textSize="25sp"
                android:drawableStart="@drawable/vip_icon"
                android:textStyle="bold"
                android:background="@drawable/blue_gradient"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:text="30,000 VND/month"
                android:textSize="20sp"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:text="Access to all manga. \n No ads. \n Get free coin daily."
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:text="Get you VIP plan now:"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="2"
        android:layout_height="wrap_content" >

        <androidx.cardview.widget.CardView
            android:id="@+id/thirtyDaysSub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="match_parent"
                    android:text=" 30 days"
                    android:textSize="20sp"
                    android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/vip_icon"
                    android:background="@drawable/blue_gradient"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:text="30,000 VND"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text="1000 VND/day \n Get 10 coins instantly \n Get 3 coins daily"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/ninetyDaysSub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="5dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="match_parent"
                    android:text=" 90 days"
                    android:drawableStart="@drawable/vip_icon"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
                    android:background="@drawable/blue_gradient"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:text="80,000 VND"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text="888 VND/day \n Get 15 coins instantly \n Get 4 coins daily"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content" >

        <androidx.cardview.widget.CardView
            android:id="@+id/oneEightyDaysSub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="match_parent"
                    android:text=" 180 days"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/blue_gradient"
                    android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
                    android:drawableStart="@drawable/vip_icon"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:text="153,000 VND"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text="850 VND/day \n Get 40 coins instantly \n Get 5 coins daily"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/threeSixtyDaysSub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="5dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="match_parent"
                    android:text=" 360 days"
                    android:drawableStart="@drawable/vip_icon"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
                    android:background="@drawable/blue_gradient"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:text="288,000 VND"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text="800 VND/day \n Get 100 coins instantly \n Get 6 coins daily"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>