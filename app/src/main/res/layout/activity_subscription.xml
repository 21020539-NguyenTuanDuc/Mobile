<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_grey"
    tools:context=".SettingPackage.SubscriptionActivity">

    <TextView
        android:id="@+id/currentPlan"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Your current plan: Standard"
        android:textSize="20sp"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="7dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="match_parent"
                android:text="@string/standard_plan"
                android:textSize="25sp"
                android:textStyle="bold"
                android:background="@color/gray"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:text="@string/free"
                android:textSize="20sp"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:text="@string/describe_free_plan"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="7dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="match_parent"
                android:text=" VIP plan"
                android:textSize="25sp"
                android:drawableStart="@drawable/vip_icon"
                android:textStyle="bold"
                android:background="@drawable/blue_gradient"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:text="30,000 VND/month"
                android:textSize="20sp"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:text="@string/describe_vip_plan"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:text="@string/buy_vip"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="2"
        android:layout_height="wrap_content" >

        <androidx.cardview.widget.CardView
            android:id="@+id/thirtyDaysSub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/_30_days"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/blue_gradient"
                    android:layout_height="wrap_content"
                    app:drawableEndCompat="@drawable/baseline_keyboard_arrow_right_24"
                    app:drawableStartCompat="@drawable/vip_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:text="30,000 VND"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/coin_30_days"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/ninetyDaysSub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="5dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/_90_days"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/blue_gradient"
                    android:layout_height="wrap_content"
                    app:drawableStartCompat="@drawable/vip_icon"
                    app:drawableEndCompat="@drawable/baseline_keyboard_arrow_right_24" />

                <TextView
                    android:layout_width="match_parent"
                    android:text="80,000 VND"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/coin_90_days"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content" >

        <androidx.cardview.widget.CardView
            android:id="@+id/oneEightyDaysSub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/_180_days"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/blue_gradient"
                    android:layout_height="wrap_content"
                    app:drawableEndCompat="@drawable/baseline_keyboard_arrow_right_24"
                    app:drawableStartCompat="@drawable/vip_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:text="153,000 VND"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/coin_180_days"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/threeSixtyDaysSub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="5dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/_360_days"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/blue_gradient"
                    android:layout_height="wrap_content"
                    app:drawableEndCompat="@drawable/baseline_keyboard_arrow_right_24"
                    app:drawableStartCompat="@drawable/vip_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:text="288,000 VND"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/coin_360_days"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>